<%= form_with(model: event, local: true) do |f| %>
    <div class="field">
      <div class="control">
        <%= f.label :user_id, class: "label" %>
        <%= f.collection_select :user_id, User.order(:name), :id,:name%>
     </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.label :title, class: "label" %>
        <%= f.text_field :title, class: "input", autofocus: true %>
      </div>
    </div>
  
    <div class="field">
      <div class="control">
        <%= f.label :date, class: "label" %>
        <%= f.date_select :date, type: "date", class: "input" %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.label :description, class: "label" %>
        <%= f.text_field :description, class: "textarea" %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.submit "Create Event", class:"button is-primary is-large is-fullwidth" %>
      </div>
    </div>
<% end %>